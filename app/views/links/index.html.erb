<p style="color: green"><%= notice %></p>

<h1>Links</h1>

<div id="links">
  
</div>
  <table>
    <thead>
      <tr>
        <th>Name</th>
        <th>Type</th>
        <th>Large</th>
        <th>Slug</th>
      </tr>
    </thead>
    <tbody>
      <% @links.each do |link| %>
        <tr>
          <td><%= link.name %></td>
          <td><%= link.type %></td>
          <td><%= link.large_url %></td>
          <td><%= link.slug %></td>
          <td> <%= link_to "Show this link", polymorphic_path(link) %> </td>
        </tr>
       <% end %>
    </tbody>
  </table>

  <%= link_to "New link", new_link_path %>
